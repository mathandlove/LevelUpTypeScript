{
  "name": "leveupbackendnode",
  "version": "1.0.0",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch src --ignore public/ --ignore logs/ src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "logs": "powershell Get-Content -Path ./server-logs/websocket.log -Wait -Tail 10",
    "errors": "Get-Content -Path ./logs/websocket-error.log -Wait -Tail 10",
    "test": "jest --bail",
    "test:watch": "jest --watch",
    "test:integration": "jest src/utils/dataService.integration.test.ts",
    "test:unit": "jest src/utils/xStateMachine.test.ts --bail=1 --verbose --testTimeout=1000"
  },
  "dependencies": {
    "@xstate/inspect": "^0.8.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "node-fetch": "^2.7.0",
    "winston": "^3.17.0",
    "ws": "^8.18.0",
    "xstate": "^4.38.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/node-fetch": "^2.6.12",
    "@types/ws": "^8.5.13",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "parcel": "^2.13.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
