{
  "compilerOptions": {
    "target": "ES6", // or "ES2015"
    "module": "ESNext", // or "ES6"
    "moduleResolution": "node", // Use 'node' for Node.js-style resolution
    "outDir": "./dist", // Optional: specify output directory
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
